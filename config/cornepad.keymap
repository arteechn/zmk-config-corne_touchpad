#include <behaviors.dtsi>
#include <dt-bindings/zmk/backlight.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/rgb.h>

/ {
    combos {
        compatible = "zmk,combos";

        enter {
            bindings = <&kp ENTER>;
            key-positions = <19 20 21>;
        };

        esc {
            bindings = <&kp ESCAPE>;
            key-positions = <1 2>;
        };

        enye {
            bindings = <&kp RA(N)>;
            key-positions = <30 20>;
        };

        folder {
            bindings = <&kp LG(E)>;
            key-positions = <37 3 2>;
        };

        mac_copy {
            bindings = <&kp LG(C)>;
            key-positions = <27 26>;
        };

        mac_paste {
            bindings = <&kp LG(V)>;
            key-positions = <27 28>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        QWERty {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BSPC |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&kp LA(BACKSPACE)   &kp Q  &kp W  &kp E         &kp R  &kp T        &kp Y          &kp U  &kp I           &kp O    &kp P     &kp LC(BSPC)
&mt LCTRL TAB       &kp A  &kp S  &kp D         &kp F  &kp G        &kp H          &kp J  &kp K           &kp L    &kp SEMI  &kp SQT
&mt LSHFT CAPSLOCK  &kp Z  &kp X  &kp C         &kp V  &kp B        &kp N          &kp M  &kp COMMA       &kp DOT  &kp FSLH  &kp BACKSLASH
                                  &kp LEFT_ALT  &mo 2  &kp SPACE    &kp BACKSPACE  &mo 1  &kp LEFT_SHIFT
            >;

            label = "QWERty";
        };

        NumSym {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BSPC |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&trans                &kp N1     &kp N2     &kp N3        &kp N4      &kp N5         &kp N6                &kp N7                 &kp N8          &kp N9            &kp N0        &kp LA(BSPC)
&trans                &kp TILDE  &kp MINUS  &kp EQUAL     &kp ASTRK   &kp CARET      &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &kp LEFT_BRACE  &kp RIGHT_BRACE   &kp COLON     &kp DOUBLE_QUOTES
&mt LEFT_SHIFT GRAVE  &kp EXCL   &kp AT     &kp HASH      &kp DOLLAR  &kp PERCENT    &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp LESS_THAN   &kp GREATER_THAN  &kp QUESTION  &kp AMPERSAND
                                            &kp LEFT_GUI  &trans      &trans         &trans                &trans                 &trans
            >;

            label = "NumSym";
        };

        Movement {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BSPC |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&mkp MB3  &trans     &mkp RCLK  &kp UP     &mkp LCLK  &trans    &kp LEFT_CONTROL  &kp LEFT_SHIFT  &trans  &trans  &trans  &trans
&trans    &trans     &kp LEFT   &kp DOWN   &kp RIGHT  &trans    &kp PG_UP         &kp PG_DN       &trans  &trans  &trans  &trans
&trans    &kp LC(Z)  &kp LC(X)  &kp LC(C)  &kp LC(V)  &trans    &kp HOME          &kp END         &trans  &trans  &trans  &kp LC(LS(ESCAPE))
                                &trans     &trans     &trans    &kp DEL           &trans          &trans
            >;

            label = "Movement";
        };

        BLE_Lighting {
            bindings = <
&trans  &bt BT_PRV  &bt BT_NXT  &bt BT_CLR  &trans  &trans            &kp F1      &kp F2  &kp F3  &kp F4   &kp F5           &kp F6
&trans  &trans      &trans      &trans      &trans  &trans            &kp F7      &kp F8  &kp F9  &kp F10  &kp F11          &kp F12
&trans  &trans      &trans      &trans      &trans  &bt BT_CLR_ALL    &bl BL_TOG  &trans  &trans  &trans   &rgb_ug RGB_EFF  &rgb_ug RGB_TOG
                                &trans      &trans  &trans            &trans      &trans  &trans
            >;

            label = "BLE_Lighting";
        };

        layer_4 {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans    &trans  &trans  &trans
            >;
        };

        layer_5 {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans    &trans  &trans  &trans
            >;
        };
    };

    conditional_layers {
        compatible = "zmk,conditional-layers";

        BLE {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };
};
